{
    "version": 2,
    "builds": [
      {
        "src": "front/package.json", 
        "use": "@vercel/static-build",
        "config": {
          "outputDirectory": "front-build" 
        }
      },
      {
        "src": "back/pepsico_back/wsgi.py",
        "use": "@vercel/python", 
        "config": {
          "maxLambdaSize": "1024mb" 
        }
      }
    ],
    "routes": [
      {
        "src": "/pepsico-lp/front/(.*)",
        "dest": "/front/index.html" 
      },
      {
        "src": "/pepsico-lp/back/(.*)", 
        "dest": "/back/pepsico_back/wsgi.py" 
      },
      {
        "src": "/(.*)",
        "dest": "/front-build/index.html" 
      }
    ]
  }
  